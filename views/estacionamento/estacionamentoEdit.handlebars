<form action="/estacionamentoEdit" method="post" class="row g-3 justify-content-center">
    <input type="hidden" class="form-control" id="id" placeholder="ID" name="id" value="{{estacionamentos.id}}" >
    <div class="row-md">
        <div class="col-md-5">
            <label class="form-label" for="descricao">Descrição</label>
            <input type="text" class="form-control" id="descricao" placeholder="Descrição" name="descricao" value="{{estacionamentos.descricao}}" >
        </div>
    </div>
    <div class="row-md">
        <div class="col-md-5">
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </div>
    </div>
</form>
