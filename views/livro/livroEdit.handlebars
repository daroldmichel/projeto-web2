<form action="/livroEdit" method="post" class="row g-3 justify-content-center">
    <input type="hidden" class="form-control" id="_id" placeholder="ID" name="_id" value="{{livros._id}}" >
    <div class="row-md">
        <div class="col-md-5">
            <label class="form-label" for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" placeholder="Nome" name="nome" value="{{livros.nome}}">
        </div>
    </div>
    <div class="row-md">
        <div class="col-md-5">
            <label class="form-label" for="autor">Autor</label>
            <input type="text" class="form-control" id="autor" placeholder="Autor" name="autor" value="{{livros.autor}}">
        </div>
    </div>
    <div class="row-md">
        <div class="col-md-5">
            <label class="form-label" for="editor">Editor</label>
            <input type="text" class="form-control" id="editor" placeholder="Editor" name="editor" value="{{livros.editor}}">
        </div>
    </div>
    <div class="row-md">
        <div class="col-md-5">
            <label class="form-label" for="genero">Gênero Literário</label>
            <input type="text" class="form-control" id="genero" placeholder="Gênero Literário" name="genero" value="{{livros.genero}}">
        </div>
    </div>
    <div class="row-md">
        <div class="col-md-5">
            <label class="form-label" for="numpag">Número de Páginas</label>
            <input type="number" class="form-control" id="numpag" placeholder="Número de Páginas" name="numpag" value="{{livros.numpag}}">
        </div>
    </div>
    <div class="row-md">
        <div class="col-md-5">
            <button type="submit" class="btn btn-success">Editar</button>
        </div>
    </div>
</form>
